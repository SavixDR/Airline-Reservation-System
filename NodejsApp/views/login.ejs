<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/9b207dd34b.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/login.css">
    <title>Log in</title>
</head>
<body>
    <div class="wrapper">
        <div class="logo"> B Airline <i class="fa-solid fa-plane"></i>
            <nav>
                <ul>
                    <li><a href="home">Home</a></li>
                    <li><a href="feedback">Feed Back</a></li>
                    <li><a href="book">Book</a></li>
                    <li><a class="log" href="login">Login</a></li>
                    <li><a href="adminLogin">admin Login</a></li>
                    
                </ul>
            </nav>
            <i class="fa-solid fa-bars"></i>
        </div>
        
        <div class="form-box">
             <div class="button-box">
                <div id="btn"></div>
                <button type="button" class="toggle-btn" onclick="login()"><b>Log in</b></button>
                <button type="button" class="toggle-btn" onclick="register()"><b>Register</b></button>
             </div> 
            <div class="social-icons">
                <ul>
                    <li><a href="#"><i class="fa fa-google fa-fw" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-facebook fa-fw" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-linkedin-square fa-fw" aria-hidden="true"></i></a></li>
                </ul>
            </div>
            <form id="login" class="input-group" action="/auth/login" method="post">
                <input type="text" name="username" class="input-field" placeholder="Username" required>
                <input type="password" name="password" class="input-field" placeholder="Enter Password" required>
                <input type="checkbox" class="check-box"><span>Remember Password</span>
                <button type="submit" class="submit-btn"><b>Log in</b></button>
            </form>

            <form id="register" class="input-group" action="/auth/register" method="post">
                <input type="text" name="username" class="input-field" placeholder="Username" required>
                <input type="email" name="email" class="input-field" placeholder="Email" required>
                <input type="password" name="password" class="input-field" placeholder="Enter Password" required>
                <input type="text" name="title" class="input-field" placeholder="Tile (Mr/Mrs)" required>
                <input type="text" name="fName" class="input-field" placeholder="First Name" required>
                <input type="text" name="lName" class="input-field" placeholder="Last Name" required>
                <input type="text" name="country" class="input-field" placeholder="Country" required>
                <input type="text" name="address" class="input-field" placeholder="Address" required>
                <input type="number" name="age" class="input-field" placeholder="Age" required>
                <input type="text" name="tele" class="input-field" placeholder="Telephone No." required>
                <input type="checkbox" class="check-box"><span>Remember Password</span>
                <button type="submit" class="submit-btn"><b>Register</b></button>
            </form>
 
    </div>
    <script>
        var x= document.getElementById("login");
        var y= document.getElementById("register");
        var z= document.getElementById("btn");

        function register(){
            x.style.left="-400px";
            y.style.left="50px";
            z.style.left="110px";
        }
        function login(){
            x.style.left="50px";
            y.style.left="450px";
            z.style.left="0px";
        }
    </script>
    <script>
        let menuicon = document.querySelector('.fa-bars');
        var navigation =document.querySelector('nav');
        menuicon.onclick = function(){
            if(menuicon.classList.contains('fa-bars')){
                menuicon.classList.remove('fa-bars');
                menuicon.classList.add('fa-times');
                navigation.className="expand";
            }
            else{
                menuicon.classList.remove('fa-times');
                menuicon.classList.add('fa-bars');
                navigation.className="";
            }
    
        }
    </script>
</body>
</html>